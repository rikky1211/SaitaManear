<div class="flex flex-col items-center pt-10 px-4">
  <div class="card w-full max-w-sm bg-orange-200 shadow-xl">
    <div class="card-body">
      <h2 class="card-title justify-center">ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="form-control mb-4">
          <%= f.label :email, "メールアドレス", class: "label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered" %>
        </div>

        <div class="form-control mb-4">
          <%= f.label :password, "パスワード", class: "label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-control mb-4">
            <label class="label cursor-pointer justify-start gap-2">
              <%= f.check_box :remember_me, class: "checkbox !bg-white checked:bg-white" %>
              <span class="label-text">ログイン状態を保持する</span>
            </label>
          </div>
        <% end %>

        <div class="form-control mt-4">
          <%= f.submit "ログイン", class: "btn btn-warning" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="pt-10">
    <%= render "users/shared/links" %>
  </div>
</div>
