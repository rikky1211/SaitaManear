<div class="flex flex-col items-center pt-10">
  <div class="card w-full max-w-sm bg-orange-200 shadow-xl">
    <%= render 'shared/flash_message'%>
    <div class="card-body">
      <h2 class="card-title justify-center">アカウント登録情報 編集</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="form-control mb-4">
          <%= f.label :name, "名前", class: "label" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input input-bordered" %>
        </div>

        <div class="form-control mb-4">
          <%= f.label :email, "メールアドレス", class: "label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="text-sm text-gray-600 mb-4">
            現在確認中のメールアドレス: <%= resource.unconfirmed_email %>
          </div>
        <% end %>

        <div class="form-control mb-4">
          <%= f.label :current_password, "現在のパスワード（変更確認用）", class: "label" %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "input input-bordered" %>
        </div>

        <div class="form-control mb-4">
          <%= f.label :password, "新しいパスワード（#{@minimum_password_length}文字以上 / 変更しない場合は空欄）", class: "label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered" %>
        </div>

        <div class="form-control mb-4">
          <%= f.label :password_confirmation, "パスワード確認", class: "label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered" %>
        </div>

        <div class="form-control mt-4">
          <%= f.submit "更新", class: "btn btn-warning" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="card w-full max-w-sm mt-8 bg-red-100 shadow-xl">
    <div class="card-body items-center bg-red-50">
      <p class="text-sm text-gray-600 mb-2">退会をご希望ですか？</p>
      <%= button_to "アカウント削除", registration_path(resource_name),
          data: { confirm: "本当に退会しますか？", turbo_confirm: "本当に退会しますか？" },
          method: :delete, class: "btn btn-error" %>
    </div>
  </div>

  <div class="pt-10">
    <%= link_to "戻る", root_path, class: "link text-blue-600" %>
  </div>
</div>