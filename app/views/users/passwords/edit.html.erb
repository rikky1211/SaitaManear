<div class="flex flex-col items-center pt-10 px-4">
  <div class="card w-full max-w-sm bg-orange-200 shadow-xl">
    <div class="card-body">
      <h2 class="card-title justify-center">パスワード変更</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-control mb-4">
          <%= f.label :password, "新しいパスワード", class: "label" %>
          <% if @minimum_password_length %>
            <em class="text-xs text-gray-600 pl-1">（<%= @minimum_password_length %>文字以上）</em>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input input-bordered" %>
        </div>

        <div class="form-control mb-6">
          <%= f.label :password_confirmation, "新しいパスワード（確認用）", class: "label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered" %>
        </div>

        <div class="form-control mt-4">
          <%= f.submit "パスワードを変更する", class: "btn btn-warning" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="pt-10">
    <%= render "users/shared/links" %>
  </div>
</div>
